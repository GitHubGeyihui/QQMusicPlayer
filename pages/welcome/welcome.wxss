#viewSearch {
  position: relative;
  background: #eee;
  height: 120rpx;
}

#icon {
  position: absolute;
  top: 30rpx;
  left: 50rpx;
  width: 65rpx;
  height: 65rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: cover;
  text-indent: -999px;
  z-index: 2;
}
.placeholder{
  text-indent: 101rpx;
}
#viewHotSearch{
  width: 100vw;
  height: auto;
  display: flex;
  flex-direction:row;
  justify-content:left;
  flex-wrap:wrap;
}
#viewHotSearch view{
  margin-left: 20rpx;
  margin-top: 20rpx;
  padding: 30rpx;
  border-radius: 99px;
  border: 1px solid black;
  font-size:25rpx; 
}
#inputSearch {
  padding-left:100rpx;
  width: 500rpx;
  height: 80rpx;
  background: white;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -350rpx;
  margin-top: -40rpx;
  border-radius: 5px;
  font-size:30rpx; 
}
#btnCancel{
  position: absolute;
  top: 38rpx;
  right: 30rpx;
  z-index: 3;
  font-size:30rpx;
}
